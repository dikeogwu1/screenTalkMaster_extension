{
  "manifest_version": 3,
  "name": "screenTalkMaster",
  "description": "This extension helps you record and share help videos with ease.",
  "icons": {
    "128": "/images/main-icon-xl.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "/images/main-icon-lg.png"
    }
  },

  "host_permissions": ["http://*/", "https://*/*"],

  "permissions": ["scripting", "tabs", "activeTab", "tabCapture", "offscreen"],
  "version": "1.0.0"
}
